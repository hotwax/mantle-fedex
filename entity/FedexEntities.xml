<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-2.1.xsd">

    <!--Default Authentication Entity for storing Credentials -->
    <!--Entity to stored required credentials for Authentication-->
    <entity entity-name="FedexTokenDetails" package="mantle.fedex">
        <!--tokenId will always remain one-->
        <field name="tokenId" type="id" is-pk="true"/>
        <field name="grantType" type="text-long"/>
        <field name="clientId" type="text-long"><description>ClientId should be Encrypted.</description></field>
        <field name="clientSecret" type="text-long"><description>ClientSecret should be Encrypted.</description></field>
        <field name="accountNumber" type="text-short"><description>AccountNumber should be Encrypted.</description></field>
    </entity>
</entities>
